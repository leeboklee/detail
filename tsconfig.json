{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["pages/*"],
      "@/components/*": ["components/*"],
      "@/context/*": ["pages/context/*"],
      "@/hooks/*": ["pages/hooks/*"],
      "@/lib/*": ["lib/*", "pages/lib/*"],
      "@/styles/*": ["pages/styles/*"],
      "@/utils/*": ["pages/utils/*"],
      "@/services/*": ["pages/services/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backup",
    "cypress",
    "test-results",
    "playwright-report",
    "debug",
    "test-archive",
    "tests"
  ]
}
