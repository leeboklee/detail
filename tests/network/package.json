{
  "name": "detailpage",
  "version": "1.0.0",
  "description": "호텔 상세 페이지 생성기",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "s": "node scripts/start-server.js",
    "s:stable": "set GIT_TERMINAL_PROMPT=0 && set NEXT_TELEMETRY_DISABLED=1 && set NPM_CONFIG_STRICT_SSL=false && set NPM_CONFIG_GIT=false && set NPM_CONFIG_GIT_TAG_VERSION=false && set PORT=4200 && node ./scripts/clean-port.js && node ./scripts/server-debug.js run",
    "s:direct": "set PORT=4200 && next dev -H 0.0.0.0",
    "s:ide": "node scripts/start-server.js",
    "fix:html": "node scripts/fix-html-generator.js",
    "fix:server": "node scripts/fix-server-debug.js",
    "fix:all": "node scripts/auto-fix-all.js",
    "debug": "npm run fix:all && npm run s",
    "s:debug": "set GIT_TERMINAL_PROMPT=0 && set NEXT_TELEMETRY_DISABLED=1 && set NPM_CONFIG_STRICT_SSL=false && set NPM_CONFIG_GIT=false && set NPM_CONFIG_GIT_TAG_VERSION=false && set PORT=4200 && node ./scripts/clean-port.js && node ./scripts/server-debug.js run",
    "s:forever": "set PORT=4200 && node ./scripts/clean-port.js && next dev -p 4200 -H 0.0.0.0",
    "s:bg": "set NEXT_TELEMETRY_DISABLED=1 && set PORT=4200 && set NPM_CONFIG_STRICT_SSL=false && node ./scripts/clean-port.js && next dev -p 4200 -H 0.0.0.0",
    "s:batch": "scripts\\run-server.bat",
    "lint": "next lint",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "mcp:server": "node start-mcp-server.js",
    "mcp:test": "node tests/mcp-browser-test.js",
    "mcp:debug": "npx @playwright/mcp",
    "mcp:tools": "node tests/mcp-browser-tools-test.js",
    "mcp:all": "npm run mcp:server && npm run mcp:tools",
    "mcp:auto": "npx @executeautomation/playwright-mcp-server",
    "mcp:start": "concurrently \"npm run s\" \"npm run mcp:auto\"",
    "start:all": "concurrently \"npm run s\" \"npm run mcp:auto\""
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@opentelemetry/api": "^1.9.0",
    "bootstrap": "^5.3.3",
    "browserslist": "^4.24.4",
    "jszip": "^3.10.1",
    "next": "^13.5.11",
    "openai": "^4.90.0",
    "puppeteer": "^24.6.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.5"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@monaco-editor/react": "^4.7.0",
    "@playwright/mcp": "^0.0.13",
    "@playwright/test": "^1.51.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "9.23.0",
    "eslint-config-next": "15.2.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lodash": "^4.17.21",
    "playwright": "^1.51.1",
    "react-router-dom": "^7.5.0",
    "react-use": "^17.6.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  }
}
